<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>EDITAR NOTA</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="tittle" class="form-control" placeholder="Titulo" value="{{note.tittle}}"
                        autofocus>
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control">{{note.description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        <!--btn block ocupa todo el espacio-->
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>